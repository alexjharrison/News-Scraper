<nav>
    <div class="nav-wrapper">
        <a href="/" class="left flow-text logo">Ars Scraper</a>
        <ul id="nav-mobile" class="left hide-on-small">
            <li class="{{#if home}}active{{/if}}"><a href="/">Home</a></li>
            <li class="{{#unless home}}active{{/unless}}"><a href="/saved">Saved</a></li>
        </ul>
        <ul id="nav-mobile" class="right hide-on-small">
            <li><button id="get-articles" class="waves-effect waves-light btn">Get New Articles</button></li>
            <li><button id="drop-articles" class="waves-effect waves-light btn">Clear All Articles</button></li>
        </ul>
    </div>
</nav>
<div class="image-container valign-wrapper">
        <div class="title center">
            {{#if home}}
            <h3>Ars Technica<h3>
            <h4>Screen Scraper</h4>
            {{else}}
            <h3>Ars Technica<h3>
            <h4>Saved Articles</h4>
            {{/if}}
        </div>
    <img id="splash-img" src="assets/images/newspaper.jpg" alt="newspaper photo">
</div>
<div class="container">
    <div class="row section">
        {{#if home}}
            {{#each this}}
                {{#unless this.saved}}
                    <div class="col s12 m6">
                        <div class="card">
                            <div class="card-image">
                            <img class="responsive-img" src="{{this.image}}">
                            </div>
                            <div class="card-content">
                            <a target="_blank" href="{{this.url}}"><strong>{{this.title}}</strong></a>
                            <p>{{this.subHeadline}}</p>
                            </div>
                            <div class="card-action center">
                                <a data-id="{{this._id}}" class="save waves-effect waves-light btn"><i class="material-icons left">add_circle</i>Save Article</a>
                            </div>
                        </div>
                    </div>
                {{/unless}}
            {{/each}}
        {{else}}
            {{#each this}}
                {{#if this.saved}}
                    <div class="col s12 m6">
                        <div class="card">
                            <div class="card-image">
                            <img class="responsive-img" src="{{this.image}}">
                            </div>
                            <div class="card-content">
                            <a target="_blank" href="{{this.url}}"><strong>{{this.title}}</strong></a>
                            <p>{{this.subHeadline}}</p>
                            </div>
                            <div class="card-action">
                                <div class="row center">
                                    <a data-id="{{this._id}}" class="delete waves-effect waves-light btn">Delete From Saved</a>
                                </div>
                                <div class="row center">
                                    <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Article Notes</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        {{/if}}
    </div>
</div> 
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Notes For Article: {{this._id}}</h4>
        <div class="row">
            <h2 class="col s8 center">A bunch of text</h2>
            <a href="#!" class="left modal-close waves-effect waves-green btn-flat col s4"><i class="material-icons left">indeterminate_check_box</i></a>
        </div>
        
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
</div>


